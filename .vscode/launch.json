    "configurations": [
        {
            "name": "windows平台调试rust",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/chain-earth.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "preLaunchTask":"rust: cargo build",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "linux平台调试rust",
            "cargo": {
                "args": [
                    "build",
                    "--bin=chain-earth",
                    "--package=chain-earth"
                ],
                "filter": {
                    "name": "chain-earth",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'chain-earth'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=chain-earth",
                    "--package=chain-earth"
                ],
                "filter": {
                    "name": "chain-earth",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
